pipeline {
    agent any
    stages {
        stage('Checkout Code') {
            steps {
                git 'https://github.com/shamashaik19/bootstrap.git'
            }
        }
        stage('Deploy to Apache') {
            steps {
                sh '''
                sudo apt install apache2 -y
                sudo cp -r * /var/www/html/
                sudo systemctl restart apache2
                '''
            }
        }
    }
}
